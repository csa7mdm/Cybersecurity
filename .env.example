# Database Configuration
POSTGRES_PASSWORD=secure_database_password_change_me
DATABASE_URL=postgresql://cyper_admin:secure_database_password_change_me@postgres:5432/cyper_security

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_change_me
REDIS_URL=redis://:secure_redis_password_change_me@redis:6379/0

# JWT Authentication
JWT_SECRET=your-very-long-random-secret-key-at-least-32-characters
JWT_EXPIRATION=3600

# Central Authorization Server
CENTRAL_AUTH_SERVER_URL=https://auth.cyper.security
PULSE_CHECK_INTERVAL=300

# AI Configuration
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
AI_MODEL=claude-3-5-sonnet-20241022

# API Configuration
API_PORT=8080
GRPC_PORT=50051
WS_PORT=8081

# Core Engine
CORE_ENGINE_URL=http://localhost:9090
CORE_ENGINE_PORT=9090

# Frontend
REACT_APP_API_URL=http://localhost:8080/v1
REACT_APP_WS_URL=ws://localhost:8081

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_PATH=/audit_logs
MAX_CONCURRENT_SCANS=5

# Feature Flags
ENABLE_WIFI_SCANNING=true
ENABLE_WEB_SCANNING=true
ENABLE_CLOUD_AUDITING=true
ENABLE_EXPLOITATION=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=100
RATE_LIMIT_CONCURRENT_SCANS=5

# Organization Settings
DEFAULT_ORGANIZATION_TIER=basic
MAX_USERS_PER_ORG=5

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@cyper.security
SMTP_PASSWORD=smtp_password_here
SMTP_FROM=Cyper Security <noreply@cyper.security>

# Monitoring & Alerting
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9091

# Development Settings
DEBUG_MODE=false
ENABLE_PROFILING=false
